{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "module": "ES2015",
    "target": "ES2017",
    "jsx": "react-native",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./src/@types/"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
